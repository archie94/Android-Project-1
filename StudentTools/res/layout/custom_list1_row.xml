<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/memo_list_selector" >

    
    <CheckBox
        android:id="@+id/custom_list_memo_checkBox"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"        
        >
        
        
        
        
        <TextView
        android:id="@+id/custom_list_memo_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_weight="90"
        android:layout_gravity="center_vertical"
        android:text="Custom list item " />
        
        <ImageView 
        android:id="@+id/custom_list_memo_imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/alarm2"
        android:layout_weight="10"
        android:layout_gravity="center_vertical"
        />
        
    </LinearLayout>
    
     
    
    
    

   

</LinearLayout>
